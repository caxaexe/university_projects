pipeline {
    agent { label 'php-agent' }

    environment {
        GIT_CREDENTIALS = 'php-agent-key'
        COMPOSER_CACHE_DIR = "${env.WORKSPACE}/.composer_cache"
    }

    options {
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[url: 'https://github.com/caxaexe/university_projects.git']]
                    ])
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                ansiColor('xterm') {
                    echo 'Installing composer dependencies...'
                    sh '''
                      mkdir -p "$COMPOSER_CACHE_DIR"
                      composer install --no-interaction --no-progress --prefer-dist
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                ansiColor('xterm') {
                    echo 'Running PHPUnit...'
                    sh '''
                      ./vendor/bin/phpunit --configuration phpunit.xml --log-junit junit.xml || true
                    '''
                }
            }
        }

        stage('Publish results & artifacts') {
            steps {
                archiveArtifacts artifacts: '**/coverage/*.html, **/logs/*.log', allowEmptyArchive: true
                junit allowEmptyResults: false, testResults: 'junit.xml'
            }
        }
    }

    post {
        success {
            echo 'Pipeline finished successfully'
        }
        unstable {
            echo 'Some tests are failing (unstable)'
        }
        failure {
            echo 'Pipeline failed'
        }
        always {
            echo 'Cleaning up workspace'
            cleanWs()
        }
    }
}
