pipeline {
    agent {
        label 'php-agent'
    }

    stages {        
        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                dir('sawm/lab04') { 
                    sh 'php -v'
                    sh 'composer install'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                echo 'Running tests...'
                dir('sawm/lab04') {
                    sh 'vendor/bin/phpunit --colors=always tests'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed.'
        }
        success {
            echo 'All stages completed successfully!'
        }
        failure {
            echo 'Errors detected in the pipeline.'
        }
    }
}
