pipeline {
    agent {
        docker {
            image 'jenkins-php-agent'
            args '-u root:root'
        }
    }
    stages {
        stage('Install Dependencies') {
            steps {
                dir('sawm/lab04') {
                    sh 'composer install'
                }
            }
        }
        stage('Run Tests') {
            steps {
                dir('sawm/lab04') {
                    sh './vendor/bin/phpunit'
                }
            }
        }
    }
}
